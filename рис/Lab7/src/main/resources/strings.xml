<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!--    Бины для внедрения зависимостей-->
    <bean id="squareEquationSolver" class="com.mikhailovskii.lab7.generator.SquareEquationSolver"/>

    <bean id="linearEquationSolver" class="com.mikhailovskii.lab7.generator.LinearEquationSolver"/>

    <!--    Injecting default values-->
    <bean id="equationService" class="com.mikhailovskii.lab7.service.EquationService"/>

</beans>
